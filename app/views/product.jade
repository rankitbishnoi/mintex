doctype html
html(lang='en')
     head
          meta(charset='utf-8')
          meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
          title Mintex

     body
          section.container
               div
                    p= user
                         a(href='http://localhost:3000/mintex/logout')
                              | , logout
                         |.
               div
                    p
                         a(href='http://localhost:3000/mintex/cart')
                              | Cart
                         |.
               div
                    h3 Name:
                         span= product.name
                    h5 Catagory:
                         span= product.catagory
                    h5 Price:
                         span= product.price
                    - var carturl = 'http://localhost:3000/mintex/addtocart?productid='+ product.id + '&name='+ product.name + '&price='+ product.price;
                    h4
                         a(href=carturl)
                              | Add To Cart
                         |.
                    h5 Brand:
                         span= product.brand
                    h5 Description:
                         span= product.description
                    if product.size
                         h5 Size:
                              span= product.size
                    if product.color
                         h5 Color:
                              span= product.color
                    h5 Reviews:
                         for review in reviews
                              div
                                   h6 Rating
                                        span= review.rating
                                   h6 Comment:
                                        span= review.comment
                    h5 Add a review
                         form(method='post', action='http://localhost:3000/mintex/reviews/create')
                              p
                                   input(type='number' name='rating' placeholder='1-5' value='')
                              p
                                   input(type='text' name='comment' placeholder='Write comments' value='')
                              p.submit
                                   input(type='submit' value='Submit' name='')
