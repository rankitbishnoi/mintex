doctype html
html(lang='en')
     head
          meta(charset='utf-8')
          meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
          title Mintex

     body
          section.container
               div
                    h1 Mintex
               div
                    form(method='post', action='http://localhost:3000/mintex/dashboard/find')
                         p
                              input(type='text', name='name', placeholder='Search', value='')
                         p.find
                              input(type='submit', name='', value='Find')
               div
                    p= user
                         a(href='http://localhost:3000/mintex/logout')
                              | , logout
                         |.
               div
                    h2 Products
                    for product in list
                         div
                              - var productUrl = 'http://localhost:3000/mintex/product?productid=' + product.id;
                              a(href=productUrl)
                                   h3= product.name
                                   h4= product.price
