doctype html
html(lang='en')
     head
          meta(charset='utf-8')
          meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
          title Login

     body
          section.container
               .login
                    h1 Login to Mintex
                    form(method='post', action='http://localhost:3000/mintex/login')
                         p
                              input(type='text', name='id', value='', placeholder='Email or Username')
                         p
                              input(type='password', name='password', value='', placeholder='Password')
                         p.submit
                              input(type='submit', name='', value='Login')
               .login-help
                    p
                         | Forgot password?
                         a(href='http://localhost:3000/mintex/forgotpassword')
                              | , click here
                         |.
                    p
                         | New User?
                    p
                         a(href='http://localhost:3000/mintex/register/screen?as=User')
                              | Click here to
                              | Register as User
                         | .
                    p
                         a(href='http://localhost:3000/mintex/register/screen?as=Seller')
                              | Click here to
                              | Register as Seller
                         | .
