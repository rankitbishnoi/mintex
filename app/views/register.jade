doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title Register
  body
    section.container
      .login
        h1 Register to Mintex
        -if (user_seller === 'User'){
          form(method='post', action='http://localhost:3000/mintex/register/user')
            p
              input(type='text', name='username', value='', placeholder='username', required='')
            p
              input(type='text', name='firstname', value='', placeholder='firstName', required='')
            p
              input(type='text', name='lastname', value='', placeholder='lastName', required='')
            p
              input(type='number', name='mobile', value='', placeholder='mobile number', required='')
            p
              input(type='email', name='email', value='', placeholder='email', required='')
            p
              input(type='password', name='password', value='', placeholder='Password', required='')
            p.submit
              input(type='submit', name='', value='Register')
        -} else {
          form(method='post', action='http://localhost:3000/mintex/register/seller')
            p
              input(type='text', name='username', value='', placeholder='username', required='')
            p
              input(type='text', name='firstname', value='', placeholder='firstName', required='')
            p
              input(type='text', name='lastname', value='', placeholder='lastName', required='')
            p
              input(type='number', name='mobile', value='', placeholder='mobile number', required='')
            p
              input(type='email', name='email', value='', placeholder='email', required='')
            p
              input(type='text', name='address', value='', placeholder='address', required='')
            p
              input(type='text', name='company', value='', placeholder='company', required='')
            p
              input(type='text', name='gstin', value='', placeholder='GSTIN', required='')
            p
              input(type='password', name='password', value='', placeholder='Password', required='')
            p.submit
              input(type='submit', name='', value='Register')
        -}
